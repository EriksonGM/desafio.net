@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DesafioNET.UI</title>
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Style", required: false)
    <style>
        html, body {
            margin: 0px;
            padding: 0px;
        }

        body {
            display: grid;
            grid-template-columns: 1fr 1200px 1fr;
            grid-template-rows: 60px 1fr 60px;
            height: 100vh;
        }

        header {
            grid-column-start: 2;
            display: grid;
            grid-template-columns: 1fr 1fr;
            align-content: center;
            font-size: 24px;
            border-bottom: solid 1px #a9a9a9;
        }

        .container {
            grid-column-start: 2;
            padding-top: 25px
        }

        footer {
            grid-column-start: 2;
        }

        .navegator {
            display: flex;
            justify-content: space-around;
        }

        .user {
            display: flex;
            justify-content: flex-end
        }
    </style>
</head>
<body>
    <header>
        <nav class="navegator">
            <a asp-action="Index" asp-controller="Home" style="font-weight: bolder">Inicio</a>
            <a asp-controller="Home" asp-action="Account">Conta</a>
            <a asp-controller="Home" asp-action="History">Historico</a>
        </nav>
        <div class="user">
            @User.Claims.First(x => x.Type == ClaimTypes.Name).Value
            <a asp-action="LogOut" asp-controller="Auth" style="margin-left: 15px; color: blue"> Sair</a>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="">
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
